<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

	<persistence-unit name="expeditor" transaction-type="JTA">

		<jta-data-source>java:/ExpeditorDs</jta-data-source>


		<class>fr.eni.expeditor.Role</class>
		<class>fr.eni.expeditor.Etat</class>
		<class>fr.eni.expeditor.Article</class>
		<class>fr.eni.expeditor.Client</class>
		<class>fr.eni.expeditor.Collaborateur</class>
		<class>fr.eni.expeditor.Commande</class>
		<class>fr.eni.expeditor.LigneCommande</class>

		<properties>
		<!-- 	<property name="hibernate.hbm2ddl.auto" value="create-drop" /> -->
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.transaction.flush_before_completion"
				value="true" />
		</properties>

	</persistence-unit>
</persistence>
